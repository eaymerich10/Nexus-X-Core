# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider (default: openai)
AI_PROVIDER=openai

# Whisper configuration (path to compiled whisper.cpp binary)
WHISPER_PATH=/home/username/whisper.cpp/whisper-cli
WHISPER_MODEL_PATH=/home/username/whisper.cpp/models/ggml-base.bin

# Picovoice Access Keys
ACCESS_KEY_UBUNTU=your_pv_access_key_for_ubuntu
ACCESS_KEY_RPI=your_pv_access_key_for_raspberry

# Picovoice keyword paths
KEYWORD_PATH_UBUNTU=/home/username/pv-porcupine/keywords/nexus_linux.ppn
KEYWORD_PATH_RPI=/home/username/pv-porcupine/keywords/nexus_raspberry.ppn
